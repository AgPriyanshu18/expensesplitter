<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/box_rounded_stroked"
    android:backgroundTint="@color/secondary_black"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingLeft="20dp"
    android:layout_height="110dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_itemTitle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="title"
            android:textColor="@color/purple_200"
            android:textSize="32dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/tv_onItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="On: date"
            android:layout_marginRight="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="20sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_itemDescription"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginLeft="5dp"
            android:textColor="@color/secondary_text"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/iv_itemStale"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/stale_mark_removebg"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_itemAmt"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Amt: 69"
            android:textColor="@color/secondary_text"
            android:textSize="20dp"
            />

    </LinearLayout>



</LinearLayout>